<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculEcolage.MainPage"
             NavigationPage.HasBackButton="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem  Clicked="ExportDB" Text="Export"/>
        <ToolbarItem  Clicked="ImportDB" Text="Import"/>
    </ContentPage.ToolbarItems>

    <StackLayout VerticalOptions="Center">

        <Button x:Name="SetParametersButton" Text="Set parameters" Image="Image/gear-icon-1.png" Clicked="GoToSetParameters"  />
        <Button x:Name="FamilyButton"  Text="Families" Image="Image/ic_family.png" Clicked="GoToFamilyList"/>
    </StackLayout>
        
        


</ContentPage>